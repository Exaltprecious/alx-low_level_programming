CC=gcc
SRC=(main.c school.c)
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

 %.o: %.c
	$(CC) $(CFLAGS) -c $<

clean:
	$(RM) *~
	$(RM) *.o
	$(RM) $(NAME)

oclean:
	$(RM) *.o

fclean: clean
	$(RM) $(NAME)

re: fclean all
